*, *::before, *::after 
  box-sizing border-box

* 
  margin 0
  padding 0

img 
  max-width 100%
  display block

h1, h2, h3, h4, h5, h6 
  word-break balance

button
  border: none
  background-color transparent
  border: 2px solid #202020
  border-radius: .25rem
  padding .5rem 1rem
  cursor pointer

clr-100 = #f0f0f0;

body 
  min-height 100vh
  background-color clr-100
  display flex
  align-items center
  justify-content center
  font-family: sans-serif

.wrapper
  width 100%
  display flex
  flex-direction: column
  align-items center

.main
  position relative
  .reset-pad 
    position: absolute
    top: 0
    right 0
    translate: 0 -100%
    padding .25rem .5rem

  .sketchpad
    display grid
    // width 100%
    width 500px
    height 500px
    border: 1px solid rgba(black, 0.1)
    div
      aspect-ratio: 1 / 1
      // transition: background-color 9s ease-out
    // div:hover 
    //   background-color black
    //   transition: background-color .0s ease
  .actions
    margin-top 1rem
    display flex
    flex-wrap: wrap
    justify-content: space-between
    width 100%
    max-width: 500px;

    .input-div
      display flex
      align-items center
      gap: .5rem
      input
        max-width 60px
        height: 40px
        font-size: 1.5rem
        text-align: center     
    

